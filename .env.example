# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-with-secrets.token_hex-32
DEBUG=True

# SMTP Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true

# Gmail Credentials (App Password - https://support.google.com/accounts/answer/185833)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# The "from" address for emails
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Spotify API Credentials (get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Admin Password (for legacy /login route - generate with secrets.token_urlsafe)
ADMIN_PASSWORD=your-secure-admin-password

# PythonAnywhere API Token (get from PythonAnywhere Account â†’ API Token tab)
PYTHONANYWHERE_API_TOKEN=your-pythonanywhere-api-token
PYTHONANYWHERE_USERNAME=your-pythonanywhere-username
PYTHONANYWHERE_DOMAIN=your-username.pythonanywhere.com
